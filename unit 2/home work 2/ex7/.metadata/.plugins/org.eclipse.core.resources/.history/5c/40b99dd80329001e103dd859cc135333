#include <stdio.h>

int main(void) {
	setbuf(stdout,NULL); //TO SOLVE INPUT/OUTPUT BUFFER BUG
	int n,i;
	long long int product =1;
	printf("enter an integer\n");
	scanf("%d",&n);
	if(n>0)
	{
		for(i=1;i<=n;i++)
		{
			product*=i;
		}
		printf("factorial=%lli",product);

	}
	else if(n<0)
	{
		printf("Error!!! factorial of negative number does not exist");
	}
	else
	{
		product=1;
	}



}

