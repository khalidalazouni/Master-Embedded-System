#include <stdio.h>

int main(void) {
	int n,i;
	long long product =1;
	printf("enter an integer\n");
	scanf("%d",&n);
	if(n>0)
	{
		for(i=1;i<=n;i++)
		{
			product*=i;
		}
		else if(n<0)
		{
			printf("Error!!! factorial of negative number does not exist");
		}
		else
		{
			product=1;
		}

	}
	printf("factorial=%l",product);


}

