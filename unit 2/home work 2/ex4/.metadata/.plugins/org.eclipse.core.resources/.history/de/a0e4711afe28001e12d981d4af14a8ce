#include <stdio.h>

int main(void) {
	int n;
	printf("enter the number\n");
	scanf("%d",&n);
	if(n>0)
	{
		printf("%d is a positive number",n);

	}
	else if (n<0)
	{
		printf("%d is a negative number",n);
	}
	else
	{
		printf("you entered zero");
	}
}
