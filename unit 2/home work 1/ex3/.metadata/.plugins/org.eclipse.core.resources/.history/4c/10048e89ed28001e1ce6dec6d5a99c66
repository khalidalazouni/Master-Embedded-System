#include <stdio.h>

int main(void) {
	int n1,n2;
	int sum=0;
	printf("please enter two numbers");
	scanf("%d %d",&n1 &n2);
	sum=n1+n2;
	printf("the sum is %d",sum);

	return 0;
}
